generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Draft {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Source info
  sourceUrl   String
  platform    String
  sourceTitle String
  sourceAuthor String
  
  // Generated content
  title       String
  description String
  insights    String[]
  quotes      String[]
  mentions    String[]
  markdown    String
  embedCode   String
  
  // Target site
  targetSite  String   @default("shrd")
  
  // Status
  status      DraftStatus @default(DRAFT)
  publishedAt DateTime?
  publishedUrl String?
  
  // Visibility
  hidden      Boolean  @default(false)
  
  // Collections
  collections DraftCollection[]
}

enum DraftStatus {
  DRAFT
  REVIEW
  PUBLISHED
  ARCHIVED
}

model Collection {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  name        String
  slug        String   @unique
  description String?
  hidden      Boolean  @default(false)
  
  drafts      DraftCollection[]
}

model DraftCollection {
  draft        Draft      @relation(fields: [draftId], references: [id], onDelete: Cascade)
  draftId      String
  collection   Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  collectionId String
  addedAt      DateTime   @default(now())

  @@id([draftId, collectionId])
}

model Site {
  id        String   @id @default(cuid())
  name      String   @unique
  url       String
  apiKey    String?
  apiUrl    String?
  createdAt DateTime @default(now())
}
